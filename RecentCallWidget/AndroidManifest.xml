<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.huewu.apps.recentcallwidget"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".RecentCallWidgetSetting"
                  android:label="@string/app_name">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
		    </intent-filter>                  
        </activity>
        <activity
	        android:theme="@android:style/Theme.Translucent.NoTitleBar" 
    	    android:name=".ShowQuickContact"
            android:label="@string/app_name"
            />
		<receiver android:name=".RecentCallWidget" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		        <action android:name="apps.huewu.recentcall.action.SCROLL_UP" />
		        <action android:name="apps.huewu.recentcall.action.SCROLL_DOWN" />
		        <action android:name="apps.huewu.recentcall.action.SENDTO" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/widget_info" />
		</receiver>        
    </application>
<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
<uses-permission android:name="android.permission.WRITE_CONTACTS"></uses-permission>
</manifest> 