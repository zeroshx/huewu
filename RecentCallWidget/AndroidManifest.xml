<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.huewu.apps.recentcallwidget"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity
	        android:theme="@android:style/Theme.Translucent.NoTitleBar" 
    	    android:name=".ShowQuickContactActivity"
            android:label="@string/app_name"
            >
		    <intent-filter>
   				<category android:name="android.intent.category.DEFAULT" />
		        <action android:name="apps.huewu.recentcall.action.CALL_1" />
		        <action android:name="apps.huewu.recentcall.action.CALL_2" />
		        <action android:name="apps.huewu.recentcall.action.CALL_3" />
		    </intent-filter>
		</activity>
		<receiver android:name=".RecentCallWidget" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		        <action android:name="apps.huewu.recentcall.action.SCROLL_UP" />
		        <action android:name="apps.huewu.recentcall.action.SCROLL_DOWN" />
		        <action android:name="apps.huewu.recentcall.action.SENDTO" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/widget_info" />
		   <intent-filter>
		   		<action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
		   </intent-filter>
		</receiver>        
    </application>
<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
<uses-permission android:name="android.permission.WRITE_CONTACTS"></uses-permission>
</manifest> 